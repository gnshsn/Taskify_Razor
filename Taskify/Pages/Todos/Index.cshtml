@page
@model Taskify.Pages.Todos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<h2 class="mb-3">My Todos</h2>

<form method="get" class="row g-2 mb-4">
    <div class="col-md-4">
        <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search by title..." />
    </div>
    <div class="col-md-3">
        <select name="CategoryId" class="form-select">
            <option value="">All Categories</option>
            @foreach (var cat in Model.Categories)
            {
                <option value="@cat.Id" selected="@(Model.CategoryId == cat.Id)">
                    @cat.Name
                </option>
            }
        </select>
    </div>
    <div class="col-md-3">
        <select name="StatusFilter" class="form-select">
            <option value="">All Statuses</option>
            @foreach (TaskStatus status in Enum.GetValues(typeof(TaskStatus)))
            {
                <option value="@status" selected="@(Convert.ToInt32(Model.StatusFilter) == Convert.ToInt32(status))">
                    @status
                </option>
            }
        </select>
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">Filter</button>
    </div>
</form>

<table class="table table-striped table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TodoItems[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TodoItems[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TodoItems[0].DueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TodoItems[0].Priority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TodoItems[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TodoItems[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TodoItems[0].OwnerId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TodoItems) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)
            </td>
            <td>
                    @switch (item.Priority)
                    {
                        case Models.TaskPriority.Low:
                            <span class="badge bg-success">Low</span>
                            break;
                        case Models.TaskPriority.Medium:
                            <span class="badge bg-warning text-dark">Medium</span>
                            break;
                        case Models.TaskPriority.High:
                            <span class="badge bg-danger">High</span>
                            break;
                    }
            </td>
            <td>
                    @switch (item.Status)
                    {
                        case Models.TaskStatus.Pending:
                            <span class="badge bg-secondary">Pending</span>
                            break;
                        case Models.TaskStatus.InProgress:
                            <span class="badge bg-info text-dark">In Progress</span>
                            break;
                        case Models.TaskStatus.Completed:
                            <span class="badge bg-success">Completed</span>
                            break;
                    }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OwnerId)
            </td>
                <td>
                    @if (item.Status != Models.TaskStatus.Completed)
                    {
                        <button type="button"
                                class="btn btn-sm btn-success complete-btn"
                                data-id="@item.Id">
                             Complete
                        </button>
                    }
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">✏️ Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">🗑️ Delete</a>
                </td>
        </tr>
}
    </tbody>
</table>


@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".complete-btn").forEach(btn => {
                btn.addEventListener("click", async function () {
                    const id = this.getAttribute("data-id");

                    const response = await fetch(`?handler=Complete&id=${id}`, {
                        method: "POST",
                        headers: { "X-Requested-With": "XMLHttpRequest" }
                    });

                    const result = await response.json();

                    if (result.success) {
                        // Find the table row and fade it out
                        const row = this.closest("tr");
                        row.style.transition = "opacity 0.4s";
                        row.style.opacity = "0";
                        setTimeout(() => row.remove(), 400);
                    } else {
                        alert(" x " + (result.message || "Error marking task as completed"));
                    }
                });
            });
        });
    </script>
}